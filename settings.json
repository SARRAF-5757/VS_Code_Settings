{	// cspell:disable
	//*--------------------NATIVE SETTINGS--------------------*//
	
	//!Editor Settings
	"editor.fontSize": 14,
	"editor.fontFamily": "JetbrainsMono Nerd Font Mono",
	//"editor.fontFamily": "ComicShannsMono Nerd Font",
	//"editor.fontFamily": "Monaspace Radon",
	//"editor.fontFamily": "Iosevka Nerd Font",
	"editor.fontVariations": true,
	"editor.inlineSuggest.fontFamily": "Monaspace Krypton",
	"editor.fontLigatures": true,
	//"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'", //for Monaspace
	
	"editor.defaultFormatter": "esbenp.prettier-vscode", //"esbenp.prettier-vscode",
	"editor.formatOnPaste": false,
	"editor.tabSize": 4,
	"editor.wordWrapColumn": 90,
	//"editor.rulers": [90],
	"editor.stickyScroll.enabled": false,				//sticky function headers
	"editor.smoothScrolling": false,					//makes scrolling per line
	"editor.cursorSmoothCaretAnimation": "on",			//makes cursor's movement smooth
	"editor.minimap.enabled": false,					//enable/disable minimal (customize below â†“)
	//"editor.minimap.autohide": true,
	//"editor.minimap.renderCharacters": false,
	"editor.guides.bracketPairs": "active",				//enable current bracket highlighting
	"editor.multiCursorModifier": "alt",				//modifier key
	"editor.inlineSuggest.suppressSuggestions": true,	//suggestions are hidden until hover
	"editor.selectionHighlight": false,					//stop highlighting every instance of selected word
	"editor.occurrencesHighlight": "off",				//stop highlighting every instance of the symbol under cursor
	"editor.renderLineHighlight": "none",				//stop highlighting the cursor line
	"editor.accessibilitySupport": "off",				//annoying screen reader popup
	
	//!Workbench Settings
	"window.titleBarStyle": "custom",
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "catppuccin-mocha",
	"workbench.productIconTheme": "material-product-icons",
	"window.commandCenter": false, 						//hide the top bar
	"workbench.layoutControl.enabled": false, 			//hide the other top bar
	"workbench.statusBar.visible": false, 				//hide bottom statusbar
	"breadcrumbs.enabled": false, 						//hide file path on the top
	"workbench.tree.renderIndentGuides": "always",		//indent guides for functions
	"workbench.tree.enableStickyScroll": true, 			//sticky function headers
	"workbench.editor.openPositioning": "last", 		//open new tabs at the very end
	"workbench.tips.enabled": false,					//disable bulb in IDE
	"workbench.startupEditor": "none",					//prevent welcome or any editor from launching
	"scm.diffDecorations": "none", 						//disable git's added/deleted/modified colorsw
	"workbench.tree.indent": 20,						//file explorer indentation
	"workbench.colorCustomizations": {
		"terminal.background": "#00000000",
	},
		//?Terminal Settings
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.integrated.cursorStyle":"line",
	"terminal.integrated.fontWeight": "bold",
	"terminal.integrated.fontSize": 12,
	"terminal.external.osxExec": "Warp.app",
	"terminal.integrated.shell.osx": "zsh",
	
	//!File Handling
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 100,
	"files.autoSaveWhenNoErrors": true,
	"explorer.confirmDelete": false,
	"projectManager.git.baseFolders": [
		"/Users/sarraf/Library/Application Support/Code/User",
		"/Users/sarraf/Coding/Personal",
		//"/Users/sarraf/Coding/EECS280",
		//"/Users/sarraf/Coding/EECS281",
		"/Users/sarraf/Coding/EECS370",
		"/Users/sarraf/Coding/EECS485",
	],
	"projectManager.groupList": true,
	"projectManager.showParentFolderInfoOnDuplicates": true,
	"git.openRepositoryInParentFolders": "always",
	
	//*--------------------EXTENSION SETTINGS--------------------*//
	
	//!C/C++ Settings
	"C_Cpp.intelliSenseEngine": "disabled", //disable intellisense for c++ and use clang
	"C_Cpp.default.cppStandard": "c++17",
	"cmake.configureOnOpen": true,
	"makefile.configureOnOpen": true,
	//?C++ Code Formatting
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format",
		"editor.formatOnPaste": true,
		//"editor.formatOnSave": true,
		"editor.autoIndent": "full",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"C_Cpp.formatting": "clangFormat",
	"clang-format.fallbackStyle": "LLVM",
	"C_Cpp.codeAnalysis.clangTidy.checks.disabled": ["readability-magic-numbers", "cppcoreguidelines-avoid-magic-numbers"],

	//!LC2K settings [EECS 370]
	"[lc2k]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 8,
		"editor.autoIndent": "advanced",
		"editor.formatOnSave": true,
		"files.trimFinalNewlines": true,
		"files.insertFinalNewline": true
	},
	
	//!Custom CSS for VS Code
	"vscode_custom_css.imports": [
		"file:///Users/sarraf/Library/Application Support/Code/User/custom-vscode.css",
		"file:///Users/sarraf/Library/Application Support/Code/User/vscode-blur-script.js"
	],
	
	//!GitLens
	"gitlens.currentLine.fontSize": 10,
	"gitlens.currentLine.fontFamily": "Monaspace Krypton",
	"gitlens.plusFeatures.enabled": false,
	"gitlens.hovers.enabled": false,
	"gitlens.codeLens.enabled": false,
	
	//!Prettier
	"prettier.useTabs": true,
	"prettier.experimentalTernaries": true,
	"prettier.printWidth": 1000, //so that code doesn't wrap arround annoyingly
	
	//!Indent-coloring
	"indentRainbow.lightIndicatorStyleLineWidth": 6,
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.colors": ["rgba(255,255,64,0.07)", "rgba(127,255,127,0.07)", "rgba(255,127,255,0.07)", "rgba(79,236,236,0.07)"],
	"indentRainbow.ignoreErrorLanguages": [	//ignore indent error for these
		"plaintext",
		"markdown",
		"python"
	],
	
	//!Better Comments
	"better-comments.highlightPlainText": true,
	"better-comments.tags": [
		{
			"tag": "//",
			"color": "#474747", //grey
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo",
			"color": "#474747",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "#ff8C00", //yellow highlight
			"bold": false,
			"italic": false
		},
		{
			"tag": "!",
			"color": "#ff2d00", //red
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "?",
			"color": "#FF69B4", //pink
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "*",
			"color": "#00ffd2", //cyan
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "#",
			"color": "#00FFFF", //blue
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	],
	
	//!Error Lens
	"errorLens.codeLensTemplate": "$severity $message$source",
	"errorLens.enabledDiagnosticLevels": ["error" /*"warning", "hint", "info"*/],
	"codeium.enableCodeLens": "hide_x", // Hides the CodeLens for Codeium extension.
		
	//!Dictionary
	"cSpell.userWords": ["EECS"],
	
	//!Sync between profiles
	"workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations",
											"workbench.colorTheme", 
											"workbench.iconTheme", 
											"workbench.productIconTheme", 
											"editor.fontFamily", 
											"editor.fontSize", 
											"editor.fontLigatures", 
											"editor.cursorSmoothCaretAnimation", 
											"window.titleBarStyle", 
											"editor.rulers", 
											"editor.wordWrapColumn", 
											"editor.minimap.autohide", 
											"editor.minimap.renderCharacters", 
											"workbench.tree.renderIndentGuides", 
											"workbench.tree.enableStickyScroll"
										],
	//!Miscellanies
	"extensions.experimental.affinity": {				//performance improvement (?)
	"asvetliakov.vscode-neovim": 1
	},
